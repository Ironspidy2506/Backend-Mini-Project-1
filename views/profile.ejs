<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 p-10 text-white min-h-screen">
    <div class="max-w-4xl mx-auto">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Profile</h1>
        <a href="/logout" class="text-red-500 hover:text-red-400 underline"
          >Logout</a
        >
      </div>
      <div class="bg-gray-800 p-5 rounded-lg shadow-lg">
        <h2 class="text-xl mb-4">Hello, <%= user.name %> ðŸ‘‹</h2>
        <h5 class="mb-6">You can create a new post below:</h5>
        <form action="/post" method="POST">
          <textarea
            name="content"
            placeholder="What's on your mind?"
            class="m-2 p-4 w-full h-32 resize-none bg-transparent border-2 border-zinc-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          ></textarea>
          <input
            type="submit"
            value="Create new Post"
            class="w-full p-3 bg-blue-600 text-white rounded-md cursor-pointer hover:bg-blue-700"
          />
        </form>
      </div>

      <div class="posts mt-20">
        <h3 class="text-2xl font-semibold mb-6">Recent Posts</h3>

        <% user.posts.reverse().forEach(function(post) { %>
        <div class="bg-gray-800 p-5 rounded-lg shadow-lg mb-5">
          <div class="flex justify-between items-center mb-3">
            <p class="text-lg font-semibold"><%= user.username %></p>
          </div>
          <p class="text-gray-300 mb-3"><%= post.content %></p>
          <div class="flex justify-between">
            <small class="mt-3"><%= post.likes.length %> likes</small>
            <a
              href="/like/<%= post._id %>"
              class="bg-blue-500 px-4 py-2 rounded-md text-white hover:bg-blue-600"
              ><%= post.likes.indexOf(user._id) == -1 ? "Unlike" : "Like" %></a
            >
            <a
              href="/edit/<%= post._id %>"
              class="bg-green-500 px-4 py-2 rounded-md text-white hover:bg-green-600"
              >Edit</a
            >
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
